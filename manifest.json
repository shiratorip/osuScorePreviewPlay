{
  "name": "Osu score preview play",
  "description": "Add preview play button to osu scores on your page",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_icon": "images/icon.png"
  },
  "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://osu.ppy.sh/users/*",
        "https://osu.ppy.sh/*"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": [
    "*://*.ppy.sh/*"
  ]
  
}